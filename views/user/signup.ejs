    <!-- script for validating form elements -->
    <script>
      
      document.addEventListener("DOMContentLoaded", function () {
        const nameInput = document.getElementById("name");
        const emailInput = document.getElementById("email");
        const phoneInput = document.getElementById("phone");
        const passwordInput = document.getElementById("password");
        const confirmPasswordInput = document.getElementById("confirmPassword");
        const errorInName = document.getElementById("errorInName");
        const errorInEmail = document.getElementById("errorInEmail");
        const errorInPhone = document.getElementById("errorInPhone");
        const errorInPassword = document.getElementById("errorInPassword");
        const errorInConfirmPassword = document.getElementById("errorInConfirmPassword");
        const signForm = document.getElementById("signForm");

        //function for validating name
        function nameValidateChecking() {
          const nameVal = nameInput.value;
          const namePattern = /^[A-Za-z\s]+$/;
          if (nameVal.trim() === "") {
            errorInName.style.display = "block";
            errorInName.innerHTML = "Please enter a valid name";
          } else if (!namePattern.test(nameVal)) {
            errorInName.style.display = "block";
            errorInName.innerHTML = "Name can only contain alphabets and spaces";
          } else {
            errorInName.style.display = "none";
            errorInName.innerHTML = "";
          }
        }

        //function for validating email
        function emailValidateChecking() {
          const emailVal = emailInput.value;
          const emailPattern = /^[a-z0-9._%+-]+@[a-z0-9.-]+\.[a-z]{2,4}$/;
          if (!emailPattern.test(emailVal)) {
            errorInEmail.style.display = "block";
            errorInEmail.innerHTML = "Invalid format";
          } else {
            errorInEmail.style.display = "none";
            errorInEmail.innerHTML = "";
          }
        }

        //function for validating phone number
        function phoneValidateChecking() {
          const phoneVal = phoneInput.value;
          console.log(phoneInput)
          if (phoneVal.trim() === "") {
            errorInPhone.style.display = "block";
            errorInPhone.innerHTML = "Enter a valid phone number";
          } else if (phoneVal.length !== 10) {
            errorInPhone.style.display = "block";
            errorInPhone.innerHTML = "Enter a 10-digit mobile number";
          } else {
            errorInPhone.style.display = "none";
            errorInPhone.innerHTML = "";
          }
        }

        //function for validating password and confirm password
        function passwordValidateChecking() {
          const passwordVal = passwordInput.value;
          const confirmPasswordVal = confirmPasswordInput.value;
          const alpha = /[A-Za-z]/;
          const digit = /\d/;
          if (passwordVal.length < 8) {
            errorInPassword.style.display = "block";
            errorInPassword.innerHTML = "Should contain at least 8 characters";
          } else if (!alpha.test(passwordVal) || !digit.test(passwordVal)) {
            errorInPassword.style.display = "block";
            errorInPassword.innerHTML = "Should contain both numbers and alphabets";
          } else {
            errorInPassword.style.display = "none";
            errorInPassword.innerHTML = "";
          }
          if (passwordVal !== confirmPasswordVal) {
            errorInConfirmPassword.style.display = "block";
            errorInConfirmPassword.innerHTML = "Passwords do not match";
          } else {
            errorInConfirmPassword.style.display = "none";
            errorInConfirmPassword.innerHTML = "";
          }
        }

        // Add event listeners to input fields form validation and ajax request
        signForm.addEventListener("submit", function (e) {

          e.preventDefault(); 
          nameValidateChecking();
          emailValidateChecking();
          phoneValidateChecking();
          passwordValidateChecking();

          if (
            errorInName.innerHTML ||
            errorInEmail.innerHTML ||
            errorInPhone.innerHTML ||
            errorInPassword.innerHTML ||
            errorInConfirmPassword.innerHTML
          ) {
            e.preventDefault();
          } else {
            $.ajax({
              url: "/signup",
              type: "POST",
              data: { 
                name: nameInput.value,
                email: emailInput.value,
                phone: phoneInput.value,
                password: passwordInput.value,
                confirmPassword: confirmPasswordInput.value,
              },
              success: function (response) {
                console.log("Response:", response);
                if(response.success){
                  Swal.fire({
                    icon: 'success',
                    title: 'Success',
                    text: response.message,
                    showConfirmButton: false,
                    timer: 2500})
                    window.location.href = response.redirectUrl;
                }else{
                  Swal.fire({
                    icon: 'error',
                    title: 'Error',
                    text: response.message,
                    showConfirmButton: false,
                    timer: 2500})
                }
              },
              error: function (xhr, status, error) {
                console.log("AJAX Error:", xhr.responseText, status, error);
                Swal.fire({
                  icon: 'error',
                  title: 'Error',
                  text: xhr.responseText,
                  showConfirmButton: false,
                  timer: 2500})
              },
            })
          }
        });
      });
    </script> 

