      </div>

      <!-- pagination -->
      <div class="container mt-3">
        <nav aria-label="Page navigation">
          <ul class="pagination justify-content-center mb-20" style="margin-right: 200px;">
            <% for (let i=1; i <=totalPages; i++) { %>
              <li class="page-item <%= (i === currentPage) ? 'active' : '' %>">
                  <a class="page-link ajax-pagination" href="?page=<%= i %>" data-page="<%= i %>">
                    <%= i %>
                  </a>     
              </li>
              <% } %>
          </ul>
        </nav>
      </div>
    </section>
  </div>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

<script>
//new code
  let appliedFilters = {}; // Store active filters





  function addToWishlist(productId) {
        $.ajax({
            url: '/addToWishlist?id=' + productId,
            method: 'get',
            data: { productId: productId },

            success: function(response) {
                if (response.success) {
                    Swal.fire({
                        icon: 'success',
                        title: 'Success',
                        text: response.message
                    });
                }else if(response.message=="Product already in wishlist"){
                    Swal.fire({
                        icon: 'success',
                        title: 'success',
                        text: response.message
                    })
                } else {
                    Swal.fire({
                        icon: 'error',
                        title: 'Error',
                        text: response.message
                    })
                }
            },
            error: function(xhr, status, error) {
                console.error("AJAX error:", xhr.responseText, status, error);
                Swal.fire({
                    icon: 'error',
                    title: 'Something went wrong',
                    text: error
                });
            }
        })
    }




document.addEventListener("DOMContentLoaded", function () {
    const filterItems = document.querySelectorAll(".ajax-filter");
    const outOfStockCheckbox = document.querySelector("#showOutOfStock");
    const searchInput = document.getElementById("search");
    const searchButton = document.querySelector(".search-button");
    let appliedFilters = {};

    function applyFilters(page = 1) {
        let filters = { ...appliedFilters };
        
        // Get search input value
        let searchValue = searchInput.value || "";
        searchButton.setAttribute("data-value", searchValue);
        if (searchValue) filters["search"] = searchValue;

        // Add Out of Stock filter if checked
        if (outOfStockCheckbox && outOfStockCheckbox.checked) {
            filters["outOfStock"] = "true";
        }

        // Construct query parameters
        let queryParams = new URLSearchParams(filters);
        queryParams.set("page", page);
        let finalUrl = `/filter?${queryParams.toString()}`;

        // Fetch filtered products via AJAX
        fetch(finalUrl, { method: "GET", headers: { "X-Requested-With": "XMLHttpRequest" } })
            .then(response => response.text())
            .then(html => {
                let tempDiv = document.createElement("div");
                tempDiv.innerHTML = html;
                document.querySelector(".product-grid").innerHTML = tempDiv.querySelector(".product-grid").innerHTML;
                document.querySelector(".pagination").innerHTML = tempDiv.querySelector(".pagination").innerHTML;
                window.history.pushState({}, "", finalUrl);
            })
            .catch(error => console.error("Error fetching filtered products:", error));
    }

    filterItems.forEach(item => {
        item.addEventListener("click", function (event) {
            event.preventDefault();
            
            let filterType = this.dataset.filter;
            let filterValue = this.dataset.value;

            if (["Popularity", "New arrivals", "Featured"].includes(filterValue)) {
                appliedFilters = {}; // Reset all filters
            }
            if(filterType=="clearFilter"){
              window.location.href = "/shop"
            }
            
            if (filterType === "price") {
                let match = filterValue.match(/&gt=(\d+)&lt=(\d+)/);
                if (match) {
                    appliedFilters["gt"] = match[1];
                    appliedFilters["lt"] = match[2];
                }
            } else {
                appliedFilters[filterType] = filterValue;
            }

            this.classList.toggle("active");
            applyFilters();
        });
    });

    if (outOfStockCheckbox) {
        outOfStockCheckbox.addEventListener("change", () => applyFilters());
    }

    $(document).ready(function () {
        $(document).on("click", ".ajax-pagination", function (e) {
            e.preventDefault();
            let page = $(this).data("page");
            applyFilters(page);
        });
    });
});



  function updateProductList(products) {
      const productGrid = document.querySelector(".product-grid");
      productGrid.innerHTML = "";
      
      if (products.length === 0) {
          productGrid.innerHTML = "<p>No products available</p>";
          return;
      }

      products.forEach(product => {
          productGrid.innerHTML += `
              <div class="product-card">
                  <a href="/productDetails?id=${product._id}">
                      <img src="/uploads/product-imagesResized/${product.productImage[0]}" alt="${product.productName}" />
                      <h4>${product.productName}</h4>
                      <p>Brand: ${product.brand}</p>
                      <p> Price: ₹${product.salePrice.toLocaleString("en-IN")} 
                          <span class="text-muted"><strike>₹${product.regularPrice.toLocaleString("en-IN")}</strike></span>
                      </p>
                  </a>
              </div>
          `;
      });
  }

  function updatePagination(totalPages, currentPage) {
      const paginationContainer = document.querySelector(".pagination");
      paginationContainer.innerHTML = "";

      for (let i = 1; i <= totalPages; i++) {
          paginationContainer.innerHTML += `
              <li class="page-item ${i === currentPage ? "active" : ""}">
                  <a class="page-link ajax-page" href="#" data-page="${i}">${i}</a>
              </li>
          `;
      }
  }

</script>

