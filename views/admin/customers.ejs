<%- include('../partials/admin/header.ejs') %>
    <div style="margin-left: 20%; margin-right: 10%;">
        <div class="content-header row">
            <div class="d-flex justify-content-between align-items-center" style="margin-top: 2%;">
                <h2 class="content-title card-title" >Customers</h2>
            </div>
        </div>         
        <!-- search bar for searching user -->
        <header class="card-header text-center mb-20">
            <form id="searchForm" action="/admin/users" method="get" class="d-inline">
                <div class="input-group input-group-sm border border-1 border-grey rounded-pill" style="width: 500px; margin-left: 230px;">
                    <input type="text" id="searchInput" class="form-control border-0 rounded-pill" placeholder="Search customers..." name="search" value="<%= search || '' %>">
                    <button class="btn border-0" type="submit">Search</button>
                </div>
            </form>
        </header>

        <!-- user content and operations here -->
        <div class="right mt-5">
            <table class="table table-striped">
                <thead>
                  <tr>
                    <th scope="col"><b>Name</b></th>
                    <th scope="col"><b>Phone No</b></th>
                    <th scope="col"><b> Email</b></th>
                    <th scope="col"><b>Action</b></th>
                  </tr>
                </thead>
                <tbody>
                    <% if(users.length>0) {%>

                  <% for(let i=0; i < users.length; i++){  %>
                        <tr>
                            <td><%=users[i].name %></td>
                            <td><%=users[i].phone %></td>
                            <td><%=users[i].email %></td>
                            <td> 
                               <% if(users[i].isBlocked == false){ %>
                                    <button class="btn btn-danger" style="width: 80px;">
                                        <a href="#" onclick="customerBlock('<%=users[i]._id%>',1)" class="text-white" style="text-decoration: none;">Block</a>
                                    </button>
                                <% } else {%>
                                    <button class="btn btn-success" style="width: 80px;">
                                        <a href=" #"  onclick="customerBlock('<%=users[i]._id%>',-1)" class="text-white" style="text-decoration: none;">Unblock</a>
                                    </button> 
                                    <% } %>
                            </td>
                        </tr>
                        <% } %>  
                        <% }else{ %>
                            <tr>
                                <td colspan="4" class="text-center">No customers found.</td>
                            </tr>
                        <% } %>
                </tbody>
            </table>
        </div>

        <!-- pagination -->
        <div class="container mt-3">
            <nav aria-label="Page navigation">
                <ul class="pagination justify-content-center mb-20" style="margin-right: 200px;">
                    <% for (let i = 1; i <= totalPages; i++) { %>
                        <li class="page-item <%= (i === currentPage) ? 'active' : '' %>">
                            <a class="page-link" href="?page=<%= i %>">
                                <%= i %>
                            </a>
                        </li>
                    <% } %>
                </ul>
            </nav>
        </div>  
    </div>

    <!-- script for searching user -->
    <script>
        document.getElementById("searchForm").addEventListener("submit", function(event) {
            const searchValue = document.getElementById("searchInput").value.trim();
            if (searchValue) {
                this.action = `/admin/users?search=${encodeURIComponent(searchValue)}`;
            } else {
                this.action = "/admin/users";  
            }
        });
    </script>

    <!-- script for block or unblock a customer -->
    <script>
        // function for block or unblock a customer 
        function customerBlock(customerId, status) {
        let URL = status == 1 ? `/admin/blockCustomer?id=${customerId}` : `/admin/unBlockCustomer?id=${customerId}`;
        $.ajax({
            url: URL,
            method: "get",          
            success: (response) => {
                console.log("Success Response:", response);             
                Swal.fire({
                    title: "Status Updated",
                    text: response.message || `Customer has been ${status === 1 ? "blocked" : "unblocked"}.`,
                    icon: status === -1 ? "error" : "success"
                }).then(() => {
                    location.reload();
                });
            },
            error: (xhr) => {
                console.error("Error Response:", xhr);

                Swal.fire({
                    title: "Failed",
                    text: xhr.responseJSON?.message || "An error occurred while updating the product status.",
                    icon: "error"
                }).then(() => {
                    location.reload();
                });
            }
        });
    }
    </script>

<%- include('../partials/admin/footer.ejs') %>




