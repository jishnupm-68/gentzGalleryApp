<%- include("../../views/partials/admin/header") %>
<head>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@10/dist/sweetalert2.min.css">
</head>
<section class="content-main" style="margin-left:20%; display: block; z-index: 100;">
    
    <header class="card-header text-center mb-20 ">
        <div class="content-header  ">
            <div class="">
                <h2 class="content-title card-title " >Products</h2>
            </div>
        </div>
        <form id="searchForm" action="/admin/products" method="get" class="d-inline">
            <div class="input-group input-group-sm border border-1 border-grey rounded-pill" style="width: 500px; margin-left: 230px;">
                <input type="text" id="searchInput" class="form-control border-0 rounded-pill" placeholder="Search products or brands" name="search">
                <button class="btn border-0" type="submit">Search</button>
            </div>
        </form>
    </header>
    <div class="right mt-5">
        <table class="table table-striped">
            <thead>
                <button class="btn btn-primary  ml-5 mb-3 p-3"  >
                    <a href="/admin/addProducts" class="text-white" text-decoration="none">Add product</a>
                </button>
                <tr>
                    <th scope="col"><b>Image</b></th>
                    <th scope="col"><b>Product name</b></th>
                    <th scope="col"><b>Brand</b></th>
                    <th scope="col"><b>Category</b></th>
                    <th scope="col"><b>Sale Price</b></th>
                    <th scope="col"><b>Offer Price</b></th>
                    <th scope="col"><b>Offer Percentage</b></th>
                    <th scope="col"><b>Offer</b></th>
                    <th scope="col"><b>Stock</b></th>
                    <th scope="col"><b>Action</b></th>
                    <th scope="col"><b>Edit</b></th>
                </tr>
            </thead>
            <tbody>
                <% if(data.length>0){ %>
                <% for(let i=data.length-1;i>=0;i--) {%>
                
                <tr>
                    <td>
                        <img src="<%= data[i].productImage[0] %>" alt="#" width="75px" height="75px">
                    </td>
                    <td><%= data[i].productName %>
                    </td>
                    <td><%=data[i].brand %></td>
                    <td><%=data[i].category.name %></td>
                    <td><%=data[i].salePrice  %></td>
                    <td>
                        <% if(locals.data[i].offerPrice){ %>
                            <%=data[i].offerPrice %>
                            <% }else{ %>
                            0
                        <% } %>
                    </td>
                    <td>
                        <% if(locals.data[i].productOffer){ %>
                            <%=data[i].productOffer %>%
                            <% }else{ %>
                            0%
                        <% } %>
                    </td>
                    <td>
            
                    <% if(locals.data[i].productOffer===0) {%>
                     
                        <button class="btn btn-info" onclick="addOffer('<%=data[i]._id%>')" style="width: 100px;">
                            <a href="#" class="text-white">Add Offer</a>
                        </button>
                          <% }else{ %>
                        <button class="btn btn-danger" onclick="removeOffer('<%=data[i]._id%>')" style="width: 100px;">
                            <a href="#" class="text-white">Remove</a>
                        </button>
                    <% } %>
                    </td>
                    <td><%=data[i].quantity %></td>
                    <td>
                        <% if(data[i].isBlocked===false) {%>
                        <button class="btn btn-danger" style="width: 80px;">
                            <a href="#" onclick="blockProduct('<%=data[i]._id%>',1)" class="text-white" style="text-decoration: none;">Block</a>
                        </button>
                        <% }else {%>
                        <button class="btn btn-success" style="width: 80px;">
                            <a href="#" class="text-white" onclick="blockProduct('<%=data[i]._id%>',-1)"style="text-decoration: none;">Unblock</a>
                        </button>
                        <% } %>
                    </td>
                    <td>
                        <button class="btn btn-info" style="width: 80px;">
                            <a href="/admin/editProduct?id=<%=data[i]._id%>" class="text-white" style="text-decoration: none;">Edit</a>
                        </button>
                    </td>
                </tr>
                <% } %>
                <% }else{ %>
                    <tr>
                        <td colspan="11" class="text-center">No products found.</td>
                    </tr>
                <% } %>
            </tbody>
        </table>
    </div>
    

    <!-- pagination -->
     <div class="container mt-3">
        <nav aria-label="Page navigation">
            <ul class="pagination justify-content-center mb-20" style="margin-right: 200px;">
                <!-- Previous Button -->
                <li class="page-item <%= Number(currentPage) === 1 ? 'disabled' : '' %>">
                    <a class="page-link" href="?page=<%= currentPage - 1 %>">Previous</a>
                </li>
                <!-- First Page -->
                <% if (currentPage > 3) { %>
                    <li class="page-item">
                        <a class="page-link" href="?page=1">1</a>
                    </li>
                    <li class="page-item disabled"><span class="page-link">...</span></li>
                <% } %>
                <!-- Dynamic Pages -->
                <% for (let i = Math.max(1, currentPage - 2); i <= Math.min(totalPages, currentPage + 2); i++) { %>
                    <li class="page-item <%= (i === currentPage) ? 'active' : '' %>">
                        <a class="page-link" href="?page=<%= i %>"><%= i %></a>
                    </li>
                <% } %>
                <!-- Last Page -->
                <% if (currentPage < totalPages - 2) { %>
                    <li class="page-item disabled"><span class="page-link">...</span></li>
                    <li class="page-item">
                        <a class="page-link" href="?page=<%= totalPages %>"><%= totalPages %></a>
                    </li>
                <% } %>
                <!-- Next Button -->
                <li class="page-item <%= Number(currentPage) === totalPages ? 'disabled' : '' %>">
                    <a class="page-link" href="?page=<%= Number(currentPage) + 1 %>">Next</a>
                </li>
            </ul>
        </nav>
      </div>
    
</section>

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@10/dist/sweetalert2.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>


<!-- script for search the product -->
<script>
    document.getElementById("searchForm").addEventListener("submit", function(event) {
        const searchValue = document.getElementById("searchInput").value.trim();
        if (searchValue) {
            this.action = `/admin/products?search=${encodeURIComponent(searchValue)}`;
        } else {
            this.action = "/admin/products";  
        }
    });
</script>

<script>

    //function for block and unblock the product
    function blockProduct(productId, status) {
        let URL = status == 1 ? `/admin/blockProduct?id=${productId}` : `/admin/unBlockProduct?id=${productId}`;
        $.ajax({
            url: URL,
            method: "get",
            data: {
                productId: productId,
            },
            success: (response) => {     
                Swal.fire({
                    title: "Status Updated",
                    text: response.message || `Product has been ${status === 1 ? "blocked" : "unblocked"}.`,
                    icon: status === -1 ? "error" : "success"
                }).then(() => {
                    location.reload();
                });
            },
            error: (xhr) => {
                console.error("Error Response:", xhr);

                Swal.fire({
                    title: "Failed",
                    text: xhr.responseJSON?.message || "An error occurred while updating the product status.",
                    icon: "error"
                }).then(() => {
                    location.reload();
                });
            }
        });
    }

    //function for adding offer to the product
    async function  addOffer(productId){
        const {value:amount}=await Swal.fire({
            title: "Offer in Percentage",
            input: "number",
            inputLabel: "Percentage",
            inputPlaceholder: "%"
        })
        if(amount<0 || amount>100){
            Swal.fire("Invalid Offer","Offer should be between 0 and 100", 'error');
            return;
        }
        $.ajax({
            url:"/admin/addProductOffer",
            method:"post",
            data:{
                percentage:amount,
                productId:productId
            },
            success:(response)=>{
                if(response.status===true){
                    location.reload();
                    Swal.fire('offer added',"Offer has been added",'success');
                }else{
                    Swal.fire("Failed","Already there is a offer", 'error');
                }
            }
        })
    }

    //function for removing the offer
    function removeOffer(productId){
        try{
            Swal.fire({
                title:"Remove offer",
                text:"You won't be able to revert this!",
                icon:"warning",
                showCancelButton:true,
                confirmButtonColor:"#3085d6",
                cancelButtonColor:"#d33",
                confirmButtonText:"Yes, delete it!",
                timer:5000,
                timerProgressBar:true
            }).then (async(result)=>{
                if(result.isConfirmed){
                    $.ajax({
                        url:"/admin/removeProductOffer",
                        method:"post",
                        data:{
                            productId:productId
                        },
                        success:(response)=>{
                            if(response.status===true){
                                location.reload();
                                Swal.fire('offer removed',"Offer has been removed",'success');
                            }else if(response.status===false){
                                Swal.fire("Failed")
                            }
                            else{
                               Swal.fire("Failed")
                            }
                        }
                    })
                }
            })
        }catch(error){
            console.error(error)
            Swal.fire({
                title: "Error",
                text: error,
                icon: "error"
            })
        }
    }

</script>
<%- include("../../views/partials/admin/footer") %>
