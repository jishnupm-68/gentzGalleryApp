<!-- script for making changes in the order status from admin order deteails page -->
<script>

    //function for alert for checking returnorder confirmation
    function returnStatus(orderId, productId, status){
        if(status){Swal.fire({
            title: 'Return Request',
            text: `Are you sure to accept the return request`,
            icon:'warning',
            showCancelButton: true,
            confirmButtonColor: '#3085d6',
            cancelButtonColor: '#d33',
            confirmButtonText: 'Yes, accept it!'
        }).then((result) => {
            if (result.isConfirmed) {
                updateReturnStatus(orderId, productId, status);
                console.log("Confirmed", status);    
        }
        })}else{
            Swal.fire({
            title: 'Return Request',
            text: `Are you sure to reject the return request`,
            icon:'warning',
            showCancelButton: true,
            confirmButtonColor: '#3085d6',
            cancelButtonColor: '#d33',
            confirmButtonText: 'Yes, reject it!'
        }).then((result) => {
            if (result.isConfirmed) {
                updateReturnStatus(orderId, productId, status);
                console.log("Confirmed", status)    
        }
        })
        }   
    }

    // function alert for changing order status
    function changeStatus(orderId,productId,status){
        if(status){
        Swal.fire({
            title: 'Order Status Change',
            text: `Are you sure to change the order status`,
            icon:'warning',
            showCancelButton: true,
            confirmButtonColor: '#3085d6',
            cancelButtonColor: '#d33',
            confirmButtonText: 'Yes, change it!'
        }).then((result) => {
            if (result.isConfirmed) {
                updateOrderStatus(orderId,productId,status);
            }else{
                location.reload();
            }
        })
        }
    }

    // ajax request for update order return status
    function updateReturnStatus(orderId, productId, status) {
        $.ajax({
            url: '/admin/updateReturnStatus',
            method: 'POST',
            contentType: 'application/json',
            data: JSON.stringify({ orderId: orderId, productId: productId, status: status }),
            success: (response) => {
                if (response.status) {
                Swal.fire(
                    'Order Status Updated!',
                    response.message,
                'success'
                );
                    window.location.reload();
                } else {
                    Swal.fire(
                        'Failed to Update Order Status!',
                        response.message,
                        'error'
                    );
                    console.log('Failed to update order status');
                }
        },
            error: (error) => {
            Swal.fire({
                icon: 'error',
                title: 'Error!',
                text: 'Failed to update order status. Please try again.',
            })
                console.error('Error updating order status:', error);
            }
        });

    }
    
    // ajax request for update order status
    function updateOrderStatus(orderId, productId, status) {
        $.ajax({
            url: '/admin/updateOrderStatus',
            method: 'POST',
            contentType: 'application/json',
            data: JSON.stringify({ orderId: orderId, productId: productId, status: status }),
            success: (response) => {
                if (response.status) {
                Swal.fire(
                    'Order Status Updated!',
                    response.message,
                'success'
                );
                    window.location.reload();
                } else {
                    Swal.fire(
                        'Failed to Update Order Status!',
                        response.message,
                        'error'
                    );
                    console.log('Failed to update order status');
                }
        },

            error: (error) => {
            Swal.fire({
                icon: 'error',
                title: 'Error!',
                text: 'Failed to update order status. Please try again.',
            })
                console.error('Error updating order status:', error);
            }
        });

    }

 
</script>


