<script src="https://cdn.jsdelivr.net/npm/sweetalert2@10"></script>


<!-- script for performing various operations in the order listing page -->
<script>
  //function to create alert for changing status 
  function changeStatus(orderId,productId,status){
    if(status){
      Swal.fire({
        title: 'Order Status Change',
        text: `Are you sure to change the order status`,
        icon:'warning',
        showCancelButton: true,
        confirmButtonColor: '#3085d6',
        cancelButtonColor: '#d33',
        confirmButtonText: 'Yes, change it!'
      }).then((result) => {
        if (result.isConfirmed) {
          updateOrderStatus(orderId,productId,status);
        }else{
          location.reload()
        }
      })
    }
  }

  //function to update order status
  function updateOrderStatus(orderId, productId, status) {
    console.log("orderId called for changing status in the backend", orderId);
    $.ajax({
        url: '/admin/updateOrderStatus',
        method: 'POST',
        contentType: 'application/json',
        data: JSON.stringify({ orderId: orderId, productId: productId, status: status }),
        success: (response) => {
            if (response.status) {
              Swal.fire(
                'Order Status Updated!',
                response.message,
               'success'
              );
                window.location.reload();
            } else {
                Swal.fire(
                    'Failed to Update Order Status!',
                    response.message,
                    'error'
                );
            }
       },
        error: (error) => {
          Swal.fire({
            icon: 'error',
            title: 'Error!',
            text: 'Failed to update order status. Please try again.',
          })
            console.error('Error updating order status:', error);
        }
    });
  }

</script>


