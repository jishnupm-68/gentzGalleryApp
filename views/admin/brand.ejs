<%- include('../partials/admin/header.ejs') %>
<style>
  .error-message {
    color: red;
  }
</style>

<!-- brand content palced here -->
<section class="content-main" style="margin-left: 20%; ">
  <div class="content-header ml-5 " >
    <div >
      <h2 class="content-title card-title ">Brands</h2>
    </div>
  </div>
  <div class="card">
    <div class="card-body">
        <div class="row ml-4">
            <div >
                <h2 class="content-title card-title ">Brands</h2>
              </div>
        </div>
      <div class="row">  
        <div class="col-md-7 ml-105">
          <div class="table-responsive">
            <table class="table table-hover">
              <thead>
                <tr>
                  <th>Brand</th>
                  <th>Logo</th>
                  <th>Status</th>
                  <th>Block/Unblock/Delete</th>
                </tr>
              </thead>
              <tbody>
                <% data.reverse().forEach((brand,index) => { %>
                <tr>
                  <td class="text-start"><%=brand.brandName %></td>
                  <td class="text-start">
                    <div
                      class="d-flex align-items-center justify-content-center"
                      style="
                        width: 40px;
                        height: 40px;
                        border-radius: 50%;
                        overflow: hidden; ">
                      <img
                        src="<%= brand.brandImage[0] %>"
                        alt="<%=brand.brandImage[0]%>"
                        console.log(<%=brand.brandImage[0]%>)
                        class="img-fluid rounded-circle"
                        style="width: 100%; height: auto"
                      />
                    </div>
                  </td>
                  <td class="text-start">
                    <% if(brand.isBlocked ===true){ %>
                    <span
                      class="badge rounded-pill alert-danger"
                      style="width: 60px"
                      >Blocked</span
                    >
                    <% }else{ %>
                    <span
                      class="badge rounded-pill alert-success"
                      style="width: 60px"
                      >Active</span
                    >
                    <% } %>
                  </td>
                  <td class="text-start">
                    <% if(brand.isBlocked ===false){ %>
                    <button class="btn btn-danger" style="width: 90px">
                      <a href="#"   onclick="blockProduct('<%=brand._id%>',1)" class="text-white">Block</a>
                    </button>
                    <% } else{ %>
                    <button class="btn btn-success" style="width: 90px">
                      <a href="#" onclick="blockProduct('<%=brand._id%>',-1)" class="text-white">Unblock</a>
                    </button>
                    <% } %>
                    <button
                      class="btn btn-danger"
                      style="width: 90px"
                      onclick="return confirmDelete('<%=brand._id%>')"
                    >
                      <a href="#" class="text-white">Delete</a>
                    </button>
                  </td>
                </tr>
                <% }) %>
              </tbody>
            </table>
          </div>
        </div>

        <div class="col-md-3">
          <form method="post" action="#" enctype="multipart/form-data" id="addBrand">
            <div class="mb-4">
              <label for="product_name" class="form-label">Brand Name</label>
              <input
                type="text"
                name="name"
                placeholder="Type here"
                class="form-control"
              />
            </div>
            <label for="product_name" class="form-label">Brand Image</label>
            <div class="input-upload">
              <img src="" alt=""/>
              <input class="form-control border" name="image" type="file" onchange="validateImage(this)"/>
            </div>
            <div class="d-grid">
              <button class="btn btn-primary mt-20" type="submit">
                Add Brand
              </button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
 
<!-- pagination -->
<div class="container mt-3">
  <nav aria-label="Page navigation">
      <ul class="pagination justify-content-center mb-20" >
          <% for (let i = 1; i <= totalPages; i++) { %>
              <li class="page-item <%= (i === currentPage) ? 'active' : '' %>">
                  <a class="page-link" href="?page=<%= i %>">
                      <%= i %>
                  </a>
              </li>
          <% } %>
      </ul>
  </nav>
</div>
</section>


<!-- script for brand funcionalities -->
<script>

// checking for addbrand funcion 
document.addEventListener("DOMContentLoaded", function () {
    document.getElementById("addBrand").addEventListener("submit", function (event) {
        event.preventDefault(); 
        // calling function for an ajax request
        addbrand();
    });
});

  // function for adding new brand
  function addbrand(){
    let name = document.getElementsByName("name").value;
    let image = document.getElementsByName("image").files;
    $.ajax({
      url: '/admin/addBrand',
      method: 'POST',
      data: new FormData(document.getElementById('addBrand')),
      contentType: false,
      processData: false,
      enctype:"multipart/form-data",

      success: function(response){
        if(response.success){
          console.log("Success Response:", response);
        Swal.fire({
          title: "Success",
          text: response.message || "Brand has been added successfully.",
          icon: "success"
        }).then(() => {
          location.reload();
        });
        }else{
          Swal.fire({
            title: "Failed",
            text: response.message || "An error occurred while adding the brand.",
            icon: "error"
          });
        }  
      },
      error: function(xhr){
        console.error("Error Response:", xhr);
        Swal.fire({
          title: "Failed",
          text: xhr.responseJSON?.message || "An error occurred while adding the brand.",
          icon: "error"
        });
      }
    })
    }

  // function for block or unblock the brand
  function blockProduct(brandId, status) {
      let URL = status == 1 ? `/admin/blockBrand?id=${brandId}` : `/admin/unBlockBrand?id=${brandId}`;
      $.ajax({
          url: URL,
          method: "get",
          success: (response) => {     
              Swal.fire({
                  title: "Status Updated",
                  text: response.message || `Product has been ${status === 1 ? "blocked" : "unblocked"}.`,
                  icon: status === -1 ? "error" : "success"
              }).then(() => {
                  location.reload();
              });
          },
          error: (xhr) => {
              console.error("Error Response:", xhr);
              Swal.fire({
                  title: "Failed",
                  text: xhr.responseJSON?.message || "An error occurred while updating the product status.",
                  icon: "error"
              }).then(() => {
                  location.reload();
              });
          }
      });
  }

  // function for delete the brand
  function confirmDelete(brandId){
     Swal.fire({
      title: "Are you sure?",
      text: "You won't be able to revert this!",
      icon: "warning",
      showCancelButton: true,
      confirmButtonColor: "#3085d6",
      cancelButtonColor: "#d33",
      confirmButtonText: "Yes, delete it!"
    }).then((result)=>{
      if(result.isConfirmed){
        $.ajax({
        url: '/admin/deleteBrand',
        method: 'GET',
        data: {
          id: brandId,
        },
        success: (response) => {
          console.log('Success Response:', response);
          Swal.fire({
            title: "Deleted",
            text: response.message,
            icon: "success"
          }).then(() => {
            location.reload();
          });
        },
        error: (xhr) => {
          Swal.fire({
            title: "Failed",
            text: xhr.responseJSON?.message || "An error occurred while deleting the brand.",
            icon: "error"
          }).then(() => {
            location.reload();
          });
        }
      })
      }else{
         Swal.fire("Cancelled", "Your brand is safe!", "warning");
      }
    })
  }

  function validateImage(input) {
    const file = input.files[0];
    if (!file) {
       Swal.fire({
           icon: 'error',
           title: 'Error',
           text: 'Please select an image file!',
       })
        return;
    }
    //image types
    const allowedTypes = ["image/jpeg", "image/png", "image/jpg", "image/webp"];
    if (!allowedTypes.includes(file.type)) {
      Swal.fire({
        icon: 'error',
        title: 'Error...',
        text: 'Invalid image type! Only JPEG, PNG, JPG, and WebP are allowed.',
      })
        input.value = ""; 
        return;
    }
    if (file.size > 2 * 1024 * 1024) { 
        Swal.fire({
            icon: 'error',
            title: 'Oops...',
            text: 'File size is too large! Please select an image under 2MB.',
        })
        input.value = ""; 
        return;
    }
    console.log("Valid image selected:", file.name);
}

</script>

